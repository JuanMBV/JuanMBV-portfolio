---
import CSS from "./icons/CSS.astro"
import HTML from "./icons/HTML.astro"
import JavaScript from "./icons/JavaScript.astro"
import Java from "./icons/Java.astro"
import Electron from "./icons/Electron.astro"
import Spring from "./icons/Spring.astro"
import Tailwind from "./icons/Tailwind.astro"
import MySQL from "./icons/MySQL.astro"
import PostgreSQL from "./icons/PostgreSQL.astro"
import SQLite from "./icons/SQLite.astro"
import SQLServer from "./icons/SQLServer.astro"
import AWS from "./icons/AWS.astro"
import Docker from "./icons/Docker.astro"
import Git from "./icons/Git.astro"
import GitHub from "./icons/GitHub.astro"
---

<section class="flex flex-col justify-start max-w-4xl pb-14">
  <div class="flex flex-row gap-4 pb-3">
    <img src="../../public/favicon.svg" alt="Tool Icon" loading="lazy" class="size-8">
    <h1 id="tools" class="font-semibold text-3xl">Tools</h1>
  </div>
  
  <h2 class="font-semibold text-xl pb-4">Programming Languages</h2>

  <div class="flex flex-row gap-4 w-auto">
    <HTML class=" size-12"/>
    <CSS class="size-12"/>
    <JavaScript class="size-12"/>
    <Java class="size-12"/>
  </div>

  <h2 class="font-semibold text-xl pt-4 pb-4">Libraries / Frameworks</h2>

  <div class="flex flex-row gap-4 w-auto">
    <Electron class="size-12"/>
    <Spring class="size-12"/>
    <Tailwind class="size-12"/>
  </div>

  <h2 class="font-semibold text-xl pt-4 pb-4">Databases</h2>

  <div class="flex flex-row gap-4 w-auto">
    <MySQL class="size-12"/>
    <PostgreSQL class="size-12"/>
    <SQLite class="size-12"/>
    <SQLServer class="size-12"/>
  </div>

  <h2 class="font-semibold text-xl pt-4 pb-4">Devops / Cloud</h2>

  <div class="flex flex-row gap-4 w-auto">
    <AWS class="size-12"/>
    <Docker class="size-12"/>
  </div>

  <h2 class="font-semibold text-xl pt-4 pb-4">Others</h2>
  
  <div class="flex flex-row gap-4 w-auto">
    <Git class="size-12"/>
    <GitHub class="size-12"/>
  </div>
  
</section>