---
import HTML from './icons/HTML.astro'
import CSS from './icons/CSS.astro'
import JavaScript from './icons/JavaScript.astro'
import AstroIcon from './icons/AstroIcon.astro'
import Tailwind from './icons/Tailwind.astro'
import Electron from './icons/Electron.astro'
import Java from './icons/Java.astro'
import Spring from './icons/Spring.astro'
import GitHub from './icons/GitHub.astro'
import Link from './icons/Link.astro'
import BriefCase from './icons/BriefCase.astro'

const TAGS = {
  HTML: {
    name: 'HTML',
    class: '',
    icon : HTML
  },
  CSS: {
    name: 'CSS',
    class: '',
    icon : CSS
  },
  JS: {
    name: 'JavaScript',
    class: '',
    icon : JavaScript
  },
  ASTRO: {
    name: 'Astro',
    class: 'bg-yellow-400',
    icon : AstroIcon
  },
  TAILWIND: {
    name: 'Tailwind',
    class: 'bg-gray-500',
    icon : Tailwind
  },
  ELECTRON: {
    name: 'Electron',
    class: '',
    icon : Electron
  },
  JAVA: {
    name: 'Java',
    class: '',
    icon : Java
  },
  SPRING: {
    name: 'Spring',
    class: '',
    icon : Spring
  }
}

const PROJECTS = [
  {
    title: 'Blackline | Soluciones impresas profesionales | In progress !!',
    description: 'Web page for a printing company. It was built with Astro and Tailwind CSS. It has a contact form that sends an order to the company.',
    link: '',
    github: 'https://github.com/juanmbv',
    image: '../public/blackonline.webp',
    tags: [TAGS.ASTRO, TAGS.TAILWIND]
  }
]
---

<section class="flex flex-col justify-start max-w-4xl pb-14">
  <div class="flex flex-row justify-start items-start gap gap-4">
    <BriefCase class="size-8" />
    <h2 id="projects" class="text-3xl font-semibold pb-6">
      Projects
    </h2>
  </div>

  <div class="flex flex-col gap-y-16">
    {
      PROJECTS.map(({ image, title, description, tags, link, github }) => (
        <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
          <div class="w-full md:w-1/2">
            <img src={image} alt={title} class="object-cover rounded-lg" />
          </div>

          <div class="w-full md:w-1/2 md:max-w-lg">
            <h3 class="text-2xl font-semibold pb-2">{title}</h3>
          
            <div class="flex flex-wrap">
              <ul class="flex flex-row gap-x-2">
                {tags.map((tag) => (
                  <li>
                    <span
                      class={`flex items-center gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2`}
                    ><tag.icon class="size-4"/>
                      {tag.name}
                    </span>  
                  </li>
                ))}
              </ul>
              
            </div>
             
            <div class="pt-4">{description}</div>
            
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <a href={github} class="flex rounded-full border border-white/10 justify-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:scale-110 hover:bg-white/10">
                  <GitHub class="size-6" />
                  Code
                </a>
              )}
              {link && (
                <a href={link} class="flex rounded-full border border-white/10 justify-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:scale-110 hover:bg-white/10">
                  <Link class="size-6" />
                  Preview
                </a>
              )}
            </footer>
          </div>
        </article>
      ))
    }
  </div>
</section>